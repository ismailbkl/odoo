<?xml version="1.0" encoding="utf-8"?>
<odoo>
<data>

        <record id="view_lunch_order_line_temp" model="ir.ui.view">
              <field name="name">view.lunch.order.line.temp</field>
              <field name="model">lunch.order.line.temp</field>
              <field name="arch" type="xml">
                <form>
                    <group>
                        <field name="product_id" invisible="1"/>
                        <field name="product_supplier" invisible="1"/>
                        <field name="product_name"/>
                        <field name="product_description"/>
                        <field name="topping_ids" widget="many2many_tags"/>
                    </group>

                    <group>
                        <field name="note"/>
                    </group>

                    <group>
                        <field name="quantity"/>
                        <field name="price_total" widget="monetary"/>
                    </group>

                    <footer>
                        <button name="add_to_cart" string="Add To Cart"  type="object" class="oe_highlight"/>
                    </footer>
                </form>
              </field>
        </record>

</data>
</odoo>
